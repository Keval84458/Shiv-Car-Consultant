@model ProjectOfWebFormMVC.Models.Login
@{
    ViewBag.Title = "Index";
}

<head>
    <link rel="stylesheet" href="~/StyleSheet1.css" />
</head>
<body>
    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {

        <div class="box">
            <h1 class="heading"><u>LOGIN</u></h1>

            Username
            @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })

            Password
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control html-editor", @id = "password" } })
            <input type="checkbox" id="show" /> Show Password
            <br />
            <input  type="submit" name="name" value="Login" class="btn btn-outline-dark" />
        </div>


    }



</body>

<script>
    document.getElementById("show").addEventListener('change', function () {
        let passwordField = document.getElementById("password");
        if (this.checked) {
            passwordField.type = "text";
        }
        else {
            passwordField.type = "password";
        }
    });
</script>