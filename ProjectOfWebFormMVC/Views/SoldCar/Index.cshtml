@model IEnumerable<ProjectOfWebFormMVC.Models.SoldCar>

@{
    ViewBag.Title = "Index";
}



<style>
    h2 {
        color: #0e387a;
        font-family: Castellar;
    }

        h2:hover {
            color: #9fafca;
        }

    .table tr th {
        background-color: #9CC3D5FF;
    }

        .table tr th:hover {
            background-color: #0063B2FF;
        }
</style>
<h2><b>SOLD CARS</b></h2>
<p style="color:blue">@Html.Raw(TempData["Insert"])</p>
<p style="color:blue">@Html.Raw(TempData["Update"])</p>
<p style="color:red">@Html.Raw(TempData["Delete"])</p>
<p>
    @Html.ActionLink("ADD NEW CAR", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Car_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Car_No)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Owner_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>OPERATIONS</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Car_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Car_No)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Owner_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mobile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.ActionLink("EDIT", "Edit", new { id=item.Id }) |
            @Html.ActionLink("DELETE", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
