@model IEnumerable<ProjectOfWebFormMVC.Models.Car_Registration>

@{
    ViewBag.Title = "Index";
}

<style>
    h2 {
        color: #0e387a;
        font-family: Castellar;
    }

        h2:hover {
            color: #9fafca;
        }

    .table tr th {
        background-color: #9CC3D5FF;
    }

        .table tr th:hover {
            background-color: #0063B2FF;
        }
</style>
<h2><u><b>CAR REGISTRATION</b></u></h2>
<p style="color:blue">@Html.Raw(TempData["insert"])</p>
<p style="color:blue">@Html.Raw(TempData["Update"])</p>
<p style="color:red">@Html.Raw(TempData["Delete"])</p>
<p><b>@Html.ActionLink("ADD NEW CARS", "Create")</b></p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Compony_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Car_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Car_No)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Car_Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Owner_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model_Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Car_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>OPERATIONS</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Compony_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Car_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Car_No)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Car_Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Owner_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model_Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Car_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.ActionLink("EDIT", "Edit", new { id=item.Car_Id }) |           
            @Html.ActionLink("DELETE", "Delete", new { id=item.Car_Id })
        </td>
    </tr>
}

</table>
